<section class="d-flex justify-content-center bg-success-subtle flex-column" id="headerProduct">
    <h1 class="d-flex justify-content-center bg-success-subtle ">Productos</h1>
    <div class="d-flex container-fluid justify-content-between align-items-center" {{!-- style="padding-left: 20px;"
        --}}>
        <div style="padding-left: 20px;" class="d-flex flex-column align-items-center">
            <a href="/current" style="color: black;">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                    class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                    <path fill-rule="evenodd"
                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />

                </svg>
            </a>
            <p>{{firstName}} {{lastName}}</p>

        </div>
        <button type="button" class="btn btn-secondary" id="logoutButton" style="height: 50%;">Cerrar sesion</button>
    </div>
</section>

<section class="d-flex justify-content-center mb-3 flex-wrap" style="width: 90%; height: 100%; margin: auto;">

    {{#each products.payload}}
    <div class="card" style="width: 18rem; margin: 15px;">
        <img src='{{thumbnail}}' class="card-img-top" alt="imagen producto">
        <div class="card-body">
            <h5 class="card-title">Titulo: {{title}}</h5>
            <p>Codigo: {{code}}</p>
            <p class="card-text">Descripci√≥n: {{description}}</p>
            <p class="card-text">Stock: {{stock}}</p>
            <p>${{price}}</p>

            <section id="buttonAdd">
                <div class="input-group mb-3" style="width: 55%;">
                    <button class="btn btn-outline-secondary" type="button" id="subtract"
                        onclick="updateNumber(-1, `{{_id}}`)">-</button>
                    <input type="number" class="form-control" value="1" aria-label="Recipient's username"
                        aria-describedby="button-addon2" id="quantity{{_id}}">
                    <button class="btn btn-outline-secondary" type="button" id="add"
                        onclick="updateNumber(1, `{{_id}}`)">+</button>
                </div>

                <button type="button"  class=" btn btn-success" onclick="addCart(`{{_id}}`, `{{title}}`)">
                    Agregar al carrito
                </button>
            </section>
            {{!-- <button type="button" class="btn btn-success" onclick="editProduct(`{{_id}}`)"> Editar producto
            </button> --}}
        </div>
    </div>
    {{/each}}

</section>

{{#if products.hasPrevPage}}
<button type="button" class="btn btn-success"> <a
        class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
        href="/products?page= {{products.prevPage}}">Anterior</a></button>
{{/if}}

{{#if products.hasNextPage}}
<button type="button" class="btn btn-success"> <a
        class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
        href="/products?page= {{products.nextPage}}">Siguiente</a></button>
{{/if}}

